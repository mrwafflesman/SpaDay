
<form method='post' action="/User">
    Username:
    <br>
    <input type="text" name="Username" value=@ViewBag.username>
    <br>
    Email:
    <br>
    <input type="email" name="Email" value=@ViewBag.email>
    <br>
    Password:
    <br>
    <input type="password" name="Password">
    <br>
    Verify Password:
    <br>
    <input type="password" name="verify">
    @if (ViewBag.error == "Password does not match.")
    {
        <p>The password you entered is not correct. Try again.</p>
        ViewBag.error = "";
    }
    <p>@ViewBag.error</p>
    <input type="submit" name="Submit">
</form>
